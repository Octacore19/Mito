<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation"
    app:startDestination="@id/navigation_splash_screen">

    <fragment
        android:id="@+id/navigation_splash_screen"
        android:name="com.octacoresoftwares.mito.screens.SplashScreenFragment"
        android:label="@string/title_splashscreen"
        tools:layout="@layout/fragment_splash_screen">
        <action
            android:id="@+id/action_navigation_splash_screen_to_navigation_main"
            app:destination="@id/navigation_main"
            app:popUpTo="@id/navigation_splash_screen"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_navigation_splash_screen_to_navigation_authentication"
            app:destination="@id/navigation_authentication"
            app:popUpTo="@id/navigation_splash_screen"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/navigation_main"
        android:name="com.octacoresoftwares.main.MainFragment"
        android:label="@string/title_main"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_navigation_main_to_navigation_authentication"
            app:destination="@id/navigation_authentication"
            app:launchSingleTop="true"
            app:popUpTo="@id/navigation_main"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/navigation_authentication"
        android:name="com.octacoresoftwares.auth.AuthenticationFragment"
        android:label="@string/title_authentication"
        tools:layout="@layout/fragment_authentication" >
        <action
            android:id="@+id/action_navigation_authentication_to_navigation_main"
            app:destination="@id/navigation_main"
            app:popUpTo="@id/navigation_authentication"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>